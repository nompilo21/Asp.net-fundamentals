@model ToDo.Data.Models.TaskDetails

@{
    ViewBag.Title = "EditTask";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="jumbotron" style="background-color:white">
        <div class="card">
